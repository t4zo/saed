@model R101ViewModel

@{
    ViewData["Title"] = "101 - Consolidado por Etapa";
}

<main class="uk-card uk-card-default uk-padding-small">
    <h2 class="uk-card-header uk-border-rounded uk-text-center uk-margin-bottom">Consolidado por Etapa</h2>
    <section class="uk-flex">
        <dl class="uk-description-list uk-description-list-divider uk-margin-top uk-margin-small-right">
            <dt>Total de Questões</dt>
            <dd class="uk-text-center">@Model.QtdTotalQuestoes</dd>
        </dl>
        @foreach (var disciplina in Model.DisciplinasViewModel)
        {
            <dl class="uk-description-list uk-margin-small-right uk-margin-small-left">
                <dt>@disciplina.Disciplina.Nome</dt>
                <dd class="uk-text-capitalize uk-text-center">@disciplina.QtdQuestoesDisciplina</dd>
            </dl>
        }
    </section>
    <table id="table_id" class="uk-table uk-table-hover uk-text-center uk-table-striped">
        <thead>
        <tr>
            <th class="uk-text-center">Etapa</th>
            <th class="uk-text-center">Alunos</th>
            @foreach (var disciplina in Model.DisciplinasViewModel.Select(x => x.Disciplina).Distinct())
            {
                <th class="uk-text-center">@disciplina.Nome</th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (var etapaViewModel in Model.EtapasViewModel.Distinct())
        {
            <tr>
                <td>@etapaViewModel.Etapa.Nome</td>
                <td>@etapaViewModel.QtdAlunos</td>

                @foreach (var resultado in Model.ResultadoEtapasViewModel)
                {
                    if (etapaViewModel.Etapa.Id == resultado.EtapaViewModel.Etapa.Id &&
                        resultado.DisciplinaViewModel.Disciplina.Id == resultado.EtapaViewModel.DisciplinaId &&
                        resultado.EtapaViewModel.Etapa.Id == resultado.DisciplinaViewModel.EtapaId)
                    {
                        <td>@resultado.TaxaAcerto%</td>
                    }
                }
            </tr>
        }
        </tbody>
    </table>
</main>