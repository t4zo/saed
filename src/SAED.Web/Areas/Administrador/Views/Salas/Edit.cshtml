@model SAED.Core.Entities.Sala

@{
    ViewData["Title"] = "Editar Sala";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase uk-text-center">Editar Sala</span>
        <button class="uk-icon-button uk-button-primary" uk-icon="check" onclick="document.querySelector('.form').submit();"></button>
    </div>
    <hr class="uk-list-divider" />
    <form class="uk-grid-row-small form" uk-grid asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="uk-uk-text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="uk-width-1-3">
            <label asp-for="EscolaId" class="uk-form-label">Escola</label>
            <select asp-for="EscolaId" class="uk-select" asp-items="ViewBag.EscolaId"></select>
            <span asp-validation-for="EscolaId" class="uk-text-danger"></span>
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Nome" class="uk-form-label"></label>
            <input asp-for="Nome" class="uk-input" />
            <span asp-validation-for="Nome" class="uk-text-danger"></span>
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Capacidade" class="uk-form-label"></label>
            <input asp-for="Capacidade" class="uk-input" />
            <span asp-validation-for="Capacidade" class="uk-text-danger"></span>
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Area" class="uk-form-label"></label>
            <input asp-for="Area" class="uk-input" />
            <span asp-validation-for="Area" class="uk-text-danger"></span>
        </div>
    </form>
</main>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}