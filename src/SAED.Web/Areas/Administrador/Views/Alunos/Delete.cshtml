@model SAED.Core.Entities.Aluno

@{
    ViewData["Title"] = "Remover Aluno";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase uk-text-center">Remover Aluno</span>
        <button class="uk-icon-button uk-button-danger" uk-icon="check" onclick="document.querySelector('.form').submit();"></button>
    </div>
    <hr class="uk-list-divider" />
    <form class="uk-grid-row-small form" uk-grid asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="uk-text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="uk-width-1-3">
            <label asp-for="Turma.Sala.Escola.Nome" class="uk-form-label"></label>
            <input asp-for="Turma.Sala.Escola.Nome" class="uk-input" asp-items="ViewBag.EscolaId" readonly />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Turma.Sala.Nome" class="uk-form-label"></label>
            <input asp-for="Turma.Sala.Nome" class="uk-input" asp-items="ViewBag.SalaId" readonly />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Turma.Nome" class="uk-form-label"></label>
            <input asp-for="Turma.Nome" class="uk-input" asp-items="ViewBag.TurmaId" readonly />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Nome" class="uk-form-label"></label>
            <input asp-for="Nome" class="uk-input" readonly />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Nascimento" class="uk-form-label"></label>
            <input asp-for="Nascimento" class="uk-input" readonly />
        </div>
    </form>
</main>