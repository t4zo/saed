@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="SAED - Simulado de Avaliação Educacional de Juazeiro-BA">
    <meta name="author" content="Tácio de Souza Campos">
    <title>Seleção - SAED</title>

    <link rel="icon" href="~/favicon.ico"/>

    <!-- UIkit -->
    <link href="~/libs/uikit/dist/css/uikit.min.css" rel="stylesheet"/>
    <script defer src="~/libs/uikit/dist/js/uikit.min.js"></script>
    <script defer src="~/libs/uikit/dist/js/uikit-icons.js"></script>

    <!-- Pace Progress Styles -->
    <link href="~/libs/pace-js/themes/red/pace-theme-minimal.css" rel="stylesheet">
    <script defer src="~/libs/pace-js/pace.min.js"></script>

    <style>
        .uk-card {
            width: 100%;
            max-width: 480px;
        }
    </style>
</head>
<body>
<main class="uk-height-viewport uk-flex uk-flex-1 uk-flex-center uk-flex-middle">
    <div class="uk-card uk-card-default uk-card-body">
        <h2 class="uk-card-title uk-text-center">Selecionar Aluno</h2>

        <hr class="uk-list-divider"/>

        <form action="/avaliacoes" method="post">
            <p class="uk-text-lead uk-text-small">Olá @User.Identity?.Name, por favor, selecione uma escola para poder começar!</p>
            <div class="uk-grid uk-grid-row-small" uk-grid>
                <div class="uk-width-1-1">
                    <label class="uk-form-label">Escola</label>
                    <select id="escolas" class="uk-select" asp-items="ViewBag.EscolaId">
                        <option value="">---------</option>
                    </select>
                </div>
                <div class="uk-width-1-1">
                    <label class="uk-form-label">Etapa</label>
                    <select id="etapas" class="uk-select" disabled>
                        <option value="">---------</option>
                    </select>
                </div>
                <div class="uk-width-1-1">
                    <label class="uk-form-label">Turma</label>
                    <select id="turmas" class="uk-select" disabled>
                        <option value="">---------</option>
                    </select>
                </div>
                <div class="uk-width-1-1">
                    <label class="uk-form-label">Aluno</label>
                    <select id="alunos" class="uk-select" disabled>
                        <option value="">---------</option>
                    </select>
                </div>
            </div>
            <div class="uk-flex uk-flex-center uk-margin-top">
                <a class="uk-button uk-button-default" onclick="document.querySelector('.logout-form').submit();">Sair</a>
                <button class="uk-button uk-button-primary uk-flex-1">Entrar</button>
            </div>
        </form>
        <form class="logout-form"
              asp-area="Identity"
              asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action($"Index", $"Home", new {area = ""}) ">
        </form>
    </div>
</main>

<script type="text/javascript" src="~/scripts/filterNestedFields.js"></script>
<script>
        document.addEventListener("DOMContentLoaded", () => {
            const escolaField = document.querySelector("#escolas");
            const etapaField = document.querySelector("#etapas");
            const turmaField = document.querySelector("#turmas");
            const alunoField = document.querySelector("#alunos");
            
            escolaField.addEventListener("change", () => {
                filterNestedFields(escolaField.value, "/api/v1/etapasapi?id", "#etapas");
                etapaField.selectedIndex = 0;
                etapaField.disabled = true;
            });
            
            etapaField.addEventListener("change", () => {
                filterNestedFields(etapaField.value, "/api/v1/turmasapi?id", "#turmas");
                turmaField.selectedIndex = 0;
                turmaField.disabled = true;
            });
            
            turmaField.addEventListener("change", () => {
                filterNestedFields(turmaField.value, "/api/v1/alunosapi?id", "#alunos");
                alunoField.selectedIndex = 0;
                alunoField.disabled = true;
            });
        });
    </script>

</body>
</html>