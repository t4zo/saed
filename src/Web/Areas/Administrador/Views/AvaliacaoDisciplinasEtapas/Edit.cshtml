@model SAED.ApplicationCore.Entities.AvaliacaoDisciplinaEtapa

@{
    ViewData["Title"] = "Editar Avaliação";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase uk-text-center">Editar Quantidade de Questões</span>
        <button class="uk-icon-button uk-button-primary" uk-icon="check" onclick="document.querySelector('.create-form').submit();"></button>
    </div>
    <hr class="uk-list-divider" />
    <form class="uk-grid-row-small create-form" uk-grid asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="uk-uk-text-danger"></div>
        <input asp-for="DisciplinaId" class="uk-select" hidden />
        <input asp-for="EtapaId" class="uk-select" hidden />
        <div class="uk-width-1-3">
            <label id="disciplina" name="disciplina" class="uk-form-label">Disciplina</label>
            <input id="disciplina" name="disciplina" class="uk-select" readonly value="@Model.Disciplina.Nome" />
        </div>
        <div class="uk-width-1-3">
            <label id="etapa" name="etapa" class="uk-form-label">Etapa</label>
            <input id="etapa" name="etapa" class="uk-select" readonly value="@Model.Etapa.Nome" />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="QtdQuestoes" class="uk-form-label">Quantidade de Questões</label>
            <input asp-for="QtdQuestoes" class="uk-input" />
            <span asp-validation-for="QtdQuestoes" class="uk-text-danger"></span>
        </div>
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
