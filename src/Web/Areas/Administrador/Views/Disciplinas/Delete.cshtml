@model SAED.ApplicationCore.Entities.Disciplina

@{
    ViewData["Title"] = "Remover Disciplina";
}

<main class="card p-4">
    <h1>Remover Disciplina</h1>
    <hr />
    <form asp-action="Delete">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6 mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control" readonly />
            </div>
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-outline-dark mr-2" asp-action="Index">Voltar</a>
            <input type="submit" value="Remover" class="btn btn-primary" />
        </div>
    </form>
</main>
