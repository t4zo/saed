@model SAED.ApplicationCore.Entities.Disciplina

@{
    ViewData["Title"] = "Remover Disciplina";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase">Remover Escola</span>
        <button class="uk-icon-button uk-button-primary" uk-icon="check" onclick="document.querySelector('.create-form').submit();"></button>
    </div>
    <hr class="uk-list-divider" />
    <form class="uk-grid-row-small create-form" uk-grid asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="uk-text-danger"></div>
            <div class="uk-width-1-3">
                <label asp-for="Nome" class="uk-form-label">Disciplina</label>
                <input asp-for="Nome" class="uk-input" readonly/>
                <span asp-validation-for="Nome" class="uk-text-danger"></span>
            </div>
            <div class="uk-width-1-3">
                <label asp-for="Sigla" class="uk-form-label"></label>
                <input asp-for="Sigla" class="uk-input" readonly/>
                <span asp-validation-for="Sigla" class="uk-text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
    </form>
</main>
