@model SAED.ApplicationCore.Entities.Disciplina

@{
    ViewData["Title"] = "Disciplinas";
}

<main class="card p-4">
    <h1>Adicionar Disciplina</h1>
    <hr />
        <form asp-action="Create">
            <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6 mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <a class="btn btn-outline-dark mr-2" asp-action="Index">Voltar</a>
            <input type="submit" value="Atualizar" class="btn btn-primary" />
        </div>
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
