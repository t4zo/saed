@model SAED.ApplicationCore.Entities.Escola

@{
    ViewData["Title"] = "Remover Escola";
}

<main class="card p-4">
    <h1>Remover Escola</h1>
    <hr />
        <form asp-action="Delete">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-2 mb-3">
                    <label asp-for="Inep" class="control-label"></label>
                    <input asp-for="Inep" class="form-control" readonly />
                    <span asp-validation-for="Inep" class="text-danger"></span>
                </div>
                <div class="col-md-5 mb-3">
                    <label asp-for="MatrizId" class="control-label">Matriz</label>
                    <select asp-for="MatrizId" class="form-control" asp-items="ViewBag.MatrizId" readonly></select>
                    <span asp-validation-for="MatrizId" class="text-danger"></span>
                </div>
                <div class="col-md-5 mb-3">
                    <label asp-for="Nome" class="control-label">Escola</label>
                    <input asp-for="Nome" class="form-control" readonly />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-2 mb-3">
                    <label asp-for="DistritoId" class="control-label">Distrito</label>
                    <select asp-for="DistritoId" class="form-control" asp-items="ViewBag.DistritoId" readonly></select>
                    <span asp-validation-for="DistritoId" class="text-danger"></span>
                </div>
                <div class="col-md-10 mb-3">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" readonly />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" class="form-control" readonly />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="col-md-2 mb-3">
                    <label asp-for="Numero" class="control-label"></label>
                    <input asp-for="Numero" class="form-control" readonly />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" class="form-control" readonly />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
                <div class="col-md-9 mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" readonly />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
            </div>
        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-outline-dark mr-2" asp-action="Index">Voltar</a>
            <input type="submit" value="Remover" class="btn btn-primary" />
        </div>
    </form>
</main>
