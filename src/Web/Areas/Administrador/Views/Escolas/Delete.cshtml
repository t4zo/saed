@model SAED.ApplicationCore.Entities.Escola

@{
    ViewData["Title"] = "Remover Escola";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase uk-text-center">Remover Escola</span>
        <button class="uk-icon-button uk-button-primary" uk-icon="check" onclick="document.querySelector('.form').submit();"></button>
    </div>

    <hr class="uk-list-divider"/>

    <form class="uk-grid-row-small form" uk-grid asp-action="Delete">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="uk-width-1-5">
            <label asp-for="Inep" class="uk-form-label"></label>
            <input asp-for="Inep" class="uk-input" readonly/>
        </div>

        <div class="uk-width-2-5">
            <label asp-for="Matriz.Nome" class="uk-form-label">Matriz</label>
            <input asp-for="Matriz.Nome" class="uk-select" readonly/>
        </div>

        <div class="uk-width-2-5">
            <label asp-for="Nome" class="uk-form-label">Escola</label>
            <input asp-for="Nome" class="uk-input" readonly/>
        </div>

        <div class="uk-width-1-6">
            <label asp-for="Distrito.Nome" class="uk-form-label">Distrito</label>
            <input asp-for="Distrito.Nome" class="uk-select" readonly/>
        </div>

        <div class="uk-width-1-3">
            <label asp-for="Bairro" class="uk-form-label"></label>
            <input asp-for="Bairro" class="uk-input" readonly/>
        </div>

        <div class="uk-width-1-3">
            <label asp-for="Rua" class="uk-form-label"></label>
            <input asp-for="Rua" class="uk-input" readonly/>
        </div>

        <div class="uk-width-1-6">
            <label asp-for="Numero" class="uk-form-label">Número</label>
            <input asp-for="Numero" class="uk-input" readonly/>
        </div>

        <div class="uk-width-3-4">
            <label asp-for="Email" class="uk-form-label"></label>
            <input asp-for="Email" class="uk-input" readonly/>
        </div>

        <div class="uk-width-1-4">
            <label asp-for="Telefone" class="uk-form-label"></label>
            <input asp-for="Telefone" class="uk-input" readonly/>
        </div>
        <input type="hidden" asp-for="Id"/>
    </form>
</main>