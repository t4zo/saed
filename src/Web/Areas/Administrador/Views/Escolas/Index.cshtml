@model IEnumerable<SAED.ApplicationCore.Entities.Escola>

@{
    ViewData["Title"] = "Escolas";
}

<div class="uk-card uk-card-default uk-card-body">
    @{await Html.RenderPartialAsync("Partials/Table/_Header", new TableHeader { Header = "Escolas", Controller = "Escolas", Action = "Escolas" });}
    <div class="uk-overflow-auto">
        <table id="table_id" class="uk-table uk-table-hover uk-table-justify uk-table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Distrito)</th>
                    <th>Escola</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Distrito.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="d-flex flex-wrap justify-content-center">
                            <a class="uk-margin-small-right" uk-icon="pencil" title="Editar" asp-action="Edit" asp-route-id="@item.Id"></a>
                            <a uk-icon="trash" title="Remover" asp-action="Delete" asp-route-id="@item.Id"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
