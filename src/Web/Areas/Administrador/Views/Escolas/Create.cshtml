@model SAED.ApplicationCore.Entities.Escola

@{
    ViewData["Title"] = "Escola";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <h3 class="uk-card-title">Adicionar Escola</h3>
        <a class="uk-icon-button uk-button-primary" asp-action="Index" uk-icon="check" onclick="document.querySelector('.create-form').submit();"></a>
    </div>

    <hr class="uk-list-divider" />

    <form class="uk-grid-row-small create-form" uk-grid asp-area="Administrador" asp-controller="Escolas" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="uk-width-1-5">
            <label class="uk-form-label" asp-for="Inep"></label>
            <input class="uk-input" asp-for="Inep" />
            <span asp-validation-for="Inep" class="text-danger"></span>
        </div>

        <div class="uk-width-2-5">
            <label class="uk-form-label" asp-for="MatrizId">Matriz</label>
            <select class="uk-select" asp-for="MatrizId" asp-items="ViewBag.MatrizId">
                <option value="">-----</option>
            </select>
            <span asp-validation-for="MatrizId" class="text-danger"></span>
        </div>

        <div class="uk-width-2-5">
            <label class="uk-form-label" asp-for="Nome">Escola</label>
            <input class="uk-input" asp-for="Nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="uk-width-1-6">
            <label class="uk-form-label" asp-for="DistritoId">Matriz</label>
            <select class="uk-select" asp-for="DistritoId" asp-items="ViewBag.DistritoId"></select>
            <span asp-validation-for="DistritoId" class="text-danger"></span>
        </div>

        <div class="uk-width-5-6">
            <label class="uk-form-label" asp-for="Endereco">Endereço</label>
            <input class="uk-input" asp-for="Endereco" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="uk-width-1-3">
            <label class="uk-form-label" asp-for="Bairro"></label>
            <input class="uk-input" asp-for="Bairro" />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>

        <div class="uk-width-1-2">
            <label class="uk-form-label" asp-for="Rua"></label>
            <input class="uk-input" asp-for="Rua" />
            <span asp-validation-for="Rua" class="text-danger"></span>
        </div>

        <div class="uk-width-1-6">
            <label class="uk-form-label" asp-for="Numero">Número</label>
            <input class="uk-input" asp-for="Numero" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>

        <div class="uk-width-1-4">
            <label class="uk-form-label" asp-for="Email"></label>
            <input class="uk-input" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="uk-width-3-4">
            <label class="uk-form-label" asp-for="Telefone"></label>
            <input class="uk-input" asp-for="Telefone" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
