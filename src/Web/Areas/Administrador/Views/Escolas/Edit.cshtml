@model SAED.ApplicationCore.Entities.Escola

@{
    ViewData["Title"] = "Editar Escola";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase uk-text-center">Editar Escola</span>
        <button class="uk-icon-button uk-button-primary" uk-icon="check" onclick="document.querySelector('.create-form').submit();"></button>
    </div>

    <hr class="uk-list-divider" />

    <form class="uk-grid-row-small create-form" uk-grid asp-action="Edit">
        <div asp-validation-summary="ModelOnly" />
        <div class="uk-width-1-5">
            <label asp-for="Inep" class="uk-form-label"></label>
            <input asp-for="Inep" class="uk-input" />
            <span asp-validation-for="Inep" class="uk-text-danger"></span>
        </div>

        <div class="uk-width-2-5">
            <label asp-for="MatrizId" class="uk-form-label">Matriz</label>
            <select asp-for="MatrizId" class="uk-select" asp-items="ViewBag.MatrizId">
                <option value="">-----</option>
            </select>
            <span asp-validation-for="MatrizId" class="text-danger"></span>
        </div>

        <div class="uk-width-2-5">
            <label asp-for="Nome" class="uk-form-label">Escola</label>
            <input asp-for="Nome" class="uk-input" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="uk-width-1-6">
            <label asp-for="DistritoId" class="uk-form-label">Distrito</label>
            <select asp-for="DistritoId" class="uk-select" asp-items="ViewBag.DistritoId"></select>
            <span asp-validation-for="DistritoId" class="text-danger"></span>
        </div>

        <div class="uk-width-1-3">
            <label asp-for="Bairro" class="uk-form-label"></label>
            <input asp-for="Bairro" class="uk-input" />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>

        <div class="uk-width-1-3">
            <label asp-for="Rua" class="uk-form-label"></label>
            <input asp-for="Rua" class="uk-input" />
            <span asp-validation-for="Rua" class="text-danger"></span>
        </div>

        <div class="uk-width-1-6">
            <label asp-for="Numero" class="uk-form-label">Número</label>
            <input asp-for="Numero" class="uk-input" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>

        <div class="uk-width-3-4">
            <label asp-for="Email" class="uk-form-label" ></label>
            <input asp-for="Email" class="uk-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="uk-width-1-4">
            <label asp-for="Telefone" class="uk-form-label"></label>
            <input asp-for="Telefone" class="uk-input" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </form>
</main>
