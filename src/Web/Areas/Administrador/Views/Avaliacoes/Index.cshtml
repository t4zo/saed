@model IEnumerable<SAED.ApplicationCore.Entities.Avaliacao>

@{
    ViewData["Title"] = "Avaliações";
}

<div class="card p-3">
    @{await Html.RenderPartialAsync("Partials/Table/_Header", new SAED.Web.Areas.Administrador.Dtos.TableHeader { Header = "Avaliacoes", Controller = "Avaliacoes", Action = "Avaliacoes" });}
    <table id="table_id" class="table table-hover mdl-data-table text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td class="d-flex flex-wrap justify-content-center">
                    <a class="action-icon-container mx-lg-2 my-1 my-sm-0" title="Editar" asp-action="Edit" asp-route-id="@item.Id"><i class="cil-pencil font-lg"></i></a>
                    <a class="action-icon-container mx-lg-2 my-1 my-sm-0" title="Remover" asp-action="Delete" asp-route-id="@item.Id"><i class="cil-trash font-lg"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
