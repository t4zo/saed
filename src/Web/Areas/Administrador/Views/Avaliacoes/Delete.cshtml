@model SAED.ApplicationCore.Entities.Avaliacao

@{
    ViewData["Title"] = "Remover Avaliação";
}

<main class="card p-4">
    <h1>Remover Avaliação</h1>
    <hr />
        <form asp-area="Administrador" asp-controller="Avaliacoes" asp-action="Delete">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Codigo" class="control-label"></label>
                    <input asp-for="Codigo" class="form-control" readonly/>
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusAvaliacao>()" disabled></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
        </div>
        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-outline-dark mr-2" asp-area="Administrador" asp-controller="Avaliacoes" asp-action="Index">Voltar</a>
            <input type="submit" value="Remover" class="btn btn-primary" />
        </div>
    </form>
</main>
