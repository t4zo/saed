@model SAED.ApplicationCore.Entities.Distrito

@{
    ViewData["Title"] = "Adicionar Distrito";
}

<main class="card p-4">
    <h1>Adicionar Distrito</h1>
    <hr />
    <form asp-area="Administrador" asp-controller="Distritos" asp-action="Create">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6 mb-3">
                <label asp-for="Nome" class="control-label">Distrito</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="Zona" class="control-label"></label>
                <select asp-for="Zona" class="form-control" asp-items="Html.GetEnumSelectList<ZonaEnum>()"></select>
                <span asp-validation-for="Zona" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="Distancia" class="control-label">Distância</label>
                <input asp-for="Distancia" class="form-control" />
                <span asp-validation-for="Distancia" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-outline-dark mr-2" asp-area="Administrador" asp-controller="Distritos" asp-action="Index">Voltar</a>
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
