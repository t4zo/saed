@model SAED.ApplicationCore.Entities.Tema

@{
    ViewData["Title"] = "Editar Tema";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase">Editar Tema</span>
        <button class="uk-icon-button uk-button-primary" uk-icon="check" onclick="document.querySelector('.create-form').submit();"></button>
    </div>
    <hr class="uk-list-divider" />
    <form class="uk-grid-row-small create-form" uk-grid asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="uk-uk-text-danger"></div>
        <div class="uk-width-1-3">
            <label asp-for="DisciplinaId" class="uk-form-label">Disciplina</label>
            <select asp-for="DisciplinaId" class="uk-select" asp-items="ViewBag.DisciplinaId"></select>
            <span asp-validation-for="DisciplinaId" class="uk-text-danger"></span>
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Nome" class="uk-form-label">Tema</label>
            <input asp-for="Nome" class="uk-input"/>
            <span asp-validation-for="Nome" class="uk-text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
