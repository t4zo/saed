@model IEnumerable<SAED.ApplicationCore.Entities.Questao>

@{
    ViewData["Title"] = "Questoes";
}

<div class="card p-3">
    @{await Html.RenderPartialAsync("Partials/Table/_Header", new TableHeader { Header = "Questoes", Controller = "Questoes", Action = "Questoes" });}
    <table id="table_id" class="table table-hover mdl-data-table text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Descritor)</th>
                <th>@Html.DisplayNameFor(model => model.Item)</th>
                <th>@Html.DisplayNameFor(model => model.Habilitada)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Descritor.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Item)</td>
                    <td>@Html.DisplayFor(modelItem => item.Habilitada)</td>
                    <td class="d-flex flex-wrap justify-content-center">
                        <a class="action-icon-container mx-lg-2 my-1 my-sm-0" title="Editar" asp-action="Edit" asp-route-id="@item.Id"><i class="cil-pencil font-lg"></i></a>
                        <a class="action-icon-container mx-lg-2 my-1 my-sm-0" title="Remover" asp-action="Delete" asp-route-id="@item.Id"><i class="cil-trash font-lg"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
