@model SAED.ApplicationCore.Entities.Questao

@{
    ViewData["Title"] = "Adicionar Questão";
}

<main class="card p-4">
    <h1>Adicionar Questão</h1>
    <hr />
    <form asp-action="Create">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-3 mb-3">
                <label asp-for="DescritorId" class="control-label">Descritor</label>
                <select asp-for="DescritorId" class="form-control" asp-items="ViewBag.DescritorId"></select>
            </div>
            <div class="col-md-1 mb-3">
                <label asp-for="Item" class="control-label"></label>
                <input asp-for="Item" class="form-control" />
                <span asp-validation-for="Item" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="col-md-2 mb-3 pt-4">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Habilitada" /> @Html.DisplayNameFor(model => model.Habilitada)
                    </label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-outline-dark mr-2" asp-action="Index">Voltar</a>
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
