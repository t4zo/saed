@model SAED.ApplicationCore.Entities.Questao

@{
    ViewData["Title"] = "Adicionar Questão";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase uk-text-center">Adicionar Questão</span>
        <button class="uk-icon-button uk-button-primary" uk-icon="check" onclick="document.querySelector('.create-form').submit();"></button>
    </div>
    <hr class="uk-list-divider" />
    <form class="uk-grid-row-small create-form" uk-grid asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="uk-width-1-3">
            <label asp-for="DescritorId" class="uk-form-label">Descritor</label>
            <select asp-for="DescritorId" class="uk-select" asp-items="ViewBag.DescritorId"></select>
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Item" class="uk-form-label"></label>
            <input asp-for="Item" class="uk-input" />
            <span asp-validation-for="Item" class="text-danger"></span>
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Descricao" class="uk-form-label">Descrição</label>
            <textarea asp-for="Descricao" class="uk-textarea" rows="5"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="uk-width-1-3">
            <input class="uk-checkbox" asp-for="Habilitada" />
            <label asp-for="Habilitada" class="uk-form-label"></label>
        </div>
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
