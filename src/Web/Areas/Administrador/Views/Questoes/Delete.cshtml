@model SAED.ApplicationCore.Entities.Questao

@{
    ViewData["Title"] = "Remover Questao";
}

<main class="card p-4">
    <h1>Remover Questão</h1>
    <hr />
    <form asp-action="Delete">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-3 mb-3">
                <label asp-for="Descritor.Nome" class="control-label">Descritor</label>
                <input asp-for="Descritor.Nome" class="form-control" readonly />
            </div>
            <div class="col-md-1 mb-3">
                <label asp-for="Item" class="control-label"></label>
                <input asp-for="Item" class="form-control" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="5" readonly></textarea>
            </div>
            <div class="col-md-2 mb-3 p-4">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Habilitada" readonly /> @Html.DisplayNameFor(model => model.Habilitada)
                    </label>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-outline-dark mr-2" asp-action="Index">Voltar</a>
            <input type="submit" value="Remover" class="btn btn-primary" />
        </div>
    </form>
</main>
