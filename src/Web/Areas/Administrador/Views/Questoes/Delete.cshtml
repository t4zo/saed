@model SAED.ApplicationCore.Entities.Questao

@{
    ViewData["Title"] = "Remover Questão";
}

<main class="uk-card uk-card-default uk-card-body">
    <div class="uk-flex uk-flex-between uk-flex-bottom">
        <a class="uk-icon-button uk-button-default" asp-action="Index" uk-icon="arrow-left"></a>
        <span class="uk-card-title uk-text-uppercase uk-text-center">Remover Questão</span>
        <button class="uk-icon-button uk-button-danger" uk-icon="check" onclick="document.querySelector('.remove-form').submit();"></button>
    </div>
    <hr class="uk-list-divider" />
    <form class="uk-grid-row-small remove-form" uk-grid asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="uk-text-danger"></div>
        <div class="uk-width-1-3">
            <label asp-for="Descritor.Tema.Disciplina.Nome" class="uk-form-label">Disciplina</label>
            <input asp-for="Descritor.Tema.Disciplina.Nome" class="uk-select" readonly />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Descritor.Tema.Nome" class="uk-form-label">Tema</label>
            <input asp-for="Descritor.Tema.Nome" class="uk-select" asp-items="ViewBag.TemaId" readonly />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Descritor.Nome" class="uk-form-label">Descritores</label>
            <input asp-for="Descritor.Nome" class="uk-select" asp-items="ViewBag.DescritorId" readonly />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Item" class="uk-form-label"></label>
            <input asp-for="Item" class="uk-input" readonly />
        </div>
        <div class="uk-width-1-3">
            <label asp-for="Descricao" class="uk-form-label"></label>
            <textarea asp-for="Descricao" class="uk-textarea" rows="5" readonly></textarea>
        </div>
        <div class="uk-width-1-3">
            <div class="uk-width-1-3">
                <input asp-for="Habilitada" class="uk-checkbox" onclick="return false;" />
                <label asp-for="Habilitada" class="uk-form-label"></label>
            </div>
        </div>
        <input type="hidden" asp-for="Id" />
    </form>
</main>
