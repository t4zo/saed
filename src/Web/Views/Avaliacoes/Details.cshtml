@model SAED.ApplicationCore.Entities.Avaliacao

@{
    ViewData["Title"] = "Detalhes Escola";
}

<div class="card p-4">
    <h1>Detalhes da Escola</h1>
    <hr />
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly class="form-control" />
            </div>
        </div>
        <div class="col-md-9">
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" readonly class="form-control" />
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <a class="btn btn-outline-dark mr-2" asp-action="Index">Voltar</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" value="Editar" class="btn btn-outline-primary">Editar</a>
    </div>
</div>
